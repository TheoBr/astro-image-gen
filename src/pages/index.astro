---
let title = `My Astro Site - ${Math.floor(Math.random() * 100)}`;

---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />

	<style>
		header {
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: min(100%, 68ch);
		}
	</style>
</head>
<body>
	<main>
		<div class="bg-gray-800 w-screen h-screen flex items-center justify-center overflow-scroll">
			<img src="/image.png" class="w-[50%] px-12 py-12" />
		</div>
	</main>
</body>
</html>
